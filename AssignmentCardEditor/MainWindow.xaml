<Window
    x:Class="AssignmentCardEditor.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AssignmentCardEditor"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:AssignmentCardEditor.ViewModels"
    xmlns:views="clr-namespace:AssignmentCardEditor.Views"
    Title="Card Editor"
    Width="1200"
    Height="800"
    d:DataContext="{d:DesignInstance viewModels:MainWindowViewModel}"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid
            Grid.Row="0"
            Grid.Column="0">
            <views:CardView DataContext="{Binding CardViewModel}" />
        </Grid>
        <Grid
            Grid.Row="0"
            Grid.Column="1">
            <views:CardTypeView DataContext="{Binding CardTypeViewModel}" />
        </Grid>
        <Grid
            Grid.Row="0"
            Grid.Column="2">
            <views:BrowserView DataContext="{Binding BrowserViewModel}" />
        </Grid>
    </Grid>
</Window>
